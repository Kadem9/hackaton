{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/front.css') }}">
{% endblock %}

{% block body %}
<div class="login-page">
    <section class="home__banner" style="background-image: url('{{ asset('assets/img/car.svg') }}');">
    </section>
    <section class="login-form-container">
        <form method="post" class="login-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

            <label for="username">Adresse mail</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-primary btn-block mt-3" type="submit">Se connecter</button>
        </form>

        <div class="login-side-text">
            <h2>Bienvenue !</h2>
            <p>Connectez-vous pour accéder à votre tableau de bord et gérer vos automobiles.</p>
        </div>
    </section>
</div>
{% endblock %}
