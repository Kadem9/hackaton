{% extends 'base.html.twig' %}
{% block title %}Mes rendez-vous{% endblock %}

{% block body %}
    <div class="fo-container mt-page">
        <div class="grid grid-cols-1-3 gap-2">
            {% include 'front/account/_partial/_sidebar.html.twig' %}
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Mes rendez-vous</h2>
                </div>
                <div class="card-body">
                    {% if appointments is empty %}
                        <p>Aucun rendez-vous trouvé.</p>
                    {% else %}
                        <ul class="space-y-3">
                            {% for appointment in appointments %}
                                <li class="border-b pb-2">
                                    <p class="font-bold">{{ appointment.vehicle.brand }} {{ appointment.vehicle.model }}</p>
                                    <p>Date : {{ appointment.date|date('d/m/Y H:i') }}</p>
                                    {% if appointment.date < "now"|date %}
                                        <p class="text-red-600 text-sm">Rendez-vous passé</p>
                                    {% endif %}
                                    <div class="mt-2">
                                        <a href="{{ path('account_appointment_show', {id: appointment.id}) }}" class="btn-white-secondary" data-btn="xs">Voir le détail</a>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
