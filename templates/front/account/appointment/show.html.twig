{% extends 'base.html.twig' %}
{% block title %}Détail du rendez-vous{% endblock %}

{% block body %}
    <div class="fo-container mt-page">
        <div class="grid grid-cols-1-3 gap-2">
            {% include 'front/account/_partial/_sidebar.html.twig' %}
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Rendez-vous</h2>
                </div>
                <div class="card-body space-y-2">
                    <p><strong>Véhicule :</strong> {{ appointment.vehicle.brand }} {{ appointment.vehicle.model }}</p>
                    <p><strong>Immatriculation :</strong> {{ appointment.vehicle.immatriculation }}</p>
                    <p><strong>Date :</strong> {{ appointment.date|date('d/m/Y H:i') }}</p>
                    {% if appointment.date < "now"|date %}
                        <p class="text-red-600">Rendez-vous passé</p>
                    {% endif %}
                    <a href="{{ path('account_appointment_index') }}" class="btn-white-secondary mt-3">Retour à la liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
