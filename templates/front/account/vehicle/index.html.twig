{% extends 'base.html.twig' %}
{% block title %}Mes v√©hicules{% endblock %}

{% block body %}
    <div class="fo-container mt-page">
        <div class="grid grid-cols-1-3">
            {% include 'front/account/_partial/_sidebar.html.twig' %}
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Mes v√©hicules</h2>
                    <a href="{{ path('account_vehicle_new') }}" class="btn-white-secondary">Ajouter un v√©hicule</a>
                </div>
                <div class="card-body">
                    {% if vehiclesWithImages is empty %}
                        <p>Aucun v√©hicule enregistr√©.</p>
                    {% else %}
                        <ul>
                            {% for item in vehiclesWithImages %}
                                {% set vehicle = item.vehicle %}
                                <li class="mb-3">
                                    <div class="info mb-2 flex items-start gap-4">
                                        <img src="{{ asset('assets/img/' ~ vehicle.brand|lower ~ '.svg') }}" alt="Logo {{ vehicle.brand }}" class="h-6 w-auto mt-1">
                                        
                                        <div>
                                            <span class="font-bold">{{ vehicle.brand }} {{ vehicle.model }}</span><br>
                                            <span class="font-bold">Immatriculation :</span> {{ vehicle.immatriculation }}<br>
                                            <span class="font-bold">Conducteur :</span> {{ vehicle.conductor.firstname }} <br>

                                            {% if item.image %}
                                                <img src="{{ item.image }}" alt="Image v√©hicule" class="mt-2 rounded-md shadow max-w-[300px]">
                                            {% endif %}

                                            <div class="mt-2">
                                                <a href="{{ path('vehicle_recommendations', { id: vehicle.id }) }}"
                                                   class="text-sm text-blue-600 underline hover:text-blue-800">
                                                    üîç Voir les recommandations d'entretien
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    <a href="{{ path('account_vehicle_edit', {id: vehicle.id}) }}">Modifier</a> |
                                    <form method="post" action="{{ path('account_vehicle_delete', {id: vehicle.id}) }}" style="display:inline-block;" onsubmit="return confirm('Supprimer ce v√©hicule ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_vehicle_' ~ vehicle.id) }}">
                                        <button class="btn-white-red" data-btn="xs">Supprimer</button>
                                    </form>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
