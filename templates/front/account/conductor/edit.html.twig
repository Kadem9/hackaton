        <div class="grid grid-cols-1-3">
            {% include 'front/account/_partial/_sidebar.html.twig' %}
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">{{ form.vars.value.id ? 'Modifier le conducteur' : 'Ajouter un conducteur' }}</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="grid grid-cols-1 gap-4">
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.phone) }}
                    </div>
                    <button class="btn-white-secondary mt-4" type="submit">
                        {{ form.vars.value.id ? 'Mettre Ã  jour' : 'Ajouter' }}
                    </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
